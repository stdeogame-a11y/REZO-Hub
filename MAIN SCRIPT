-- MAIN SCRIPT - Blox Fruits Helper
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- Crear carpeta principal para el sistema
local BloxFruitsSystem = Instance.new("Folder")
BloxFruitsSystem.Name = "BloxFruitsHelperSystem"
BloxFruitsSystem.Parent = ReplicatedStorage

-- M√≥dulos
local MenuManager = require(script.Parent.MenuManager)
local FruitSystem = require(script.Parent.FruitSystem)
local ChestSystem = require(script.Parent.ChestSystem)
local SkillSystem = require(script.Parent.SkillSystem)

-- Sistema de configuraci√≥n
local Config = {
    AutoFarm = false,
    FruitRange = 50,
    ChestRange = 30,
    EnemyRange = 20,
    DebugMode = true
}

-- Inicializaci√≥n principal
local function initialize()
    -- Esperar a que el jugador est√© listo
    if not player.Character then
        player.CharacterAdded:Wait()
    end
    
    -- Inicializar m√≥dulos
    MenuManager:Initialize(Config)
    FruitSystem:Initialize(Config)
    ChestSystem:Initialize(Config)
    SkillSystem:Initialize(Config)
    
    print("‚úÖ Sistema Blox Fruits Helper inicializado correctamente")
    print("üìÅ Estructura modular cargada:")
    print("   - MenuManager: Sistema de interfaz")
    print("   - FruitSystem: Gesti√≥n de frutas")
    print("   - ChestSystem: Gesti√≥n de cofres")
    print("   - SkillSystem: Sistema de habilidades")
end

-- Ejecutar inicializaci√≥n
initialize()
