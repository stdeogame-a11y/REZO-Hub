-- ChestScript.lua

-- Configuración
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Función para recolectar cofres
local function collectChests()
    local chests = workspace:FindFirstChild("Chests")  -- Ajusta según la estructura de tu juego
    if chests then
        for _, chest in ipairs(chests:GetChildren()) do
            local distance = (chest.Position - character.PrimaryPart.Position).Magnitude
            if distance < 50 then  -- Ajusta el rango según sea necesario
                humanoid:MoveTo(chest.Position)
                wait(2)  -- Espera a que el personaje se mueva
                fireclickdetector(chest.ClickDetector)
                wait(1)  -- Espera a que el cofre se recolecte
            end
        end
    end
end

-- Ejecutar función
collectChests()
