-- REZO HUB COMPLETO para Delta
-- Copia y pega ESTE script completo en Delta

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer

-- CONFIGURACI√ìN PRINCIPAL
local RezoHub = {
    Config = {
        AutoFarmFruits = false,
        AutoCollectChests = false,
        AutoTrainSkills = false,
        FruitRange = 50,
        ChestRange = 30,
        EnemyRange = 25,
        DebugMode = true,
        Version = "1.0"
    },
    Modules = {}
}

-- FUNCI√ìN DE INICIALIZACI√ìN
function RezoHub:Initialize()
    -- Esperar al personaje
    if not player.Character then
        player.CharacterAdded:Wait()
    end
    
    print("üéÆ REZO HUB Iniciando...")
    
    -- Crear interfaz
    self:CreateGUI()
    
    -- Iniciar sistemas
    self:StartSystems()
    
    self:ShowWelcomeMessage()
end

-- INTERFAZ GR√ÅFICA
function RezoHub:CreateGUI()
    -- Crear GUI principal
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "RezoHubGUI"
    screenGui.Parent = game:GetService("CoreGui") or player:WaitForChild("PlayerGui")
    
    -- Marco principal
    local mainFrame = Instance.new("Frame")
    mainFrame.Name = "MainFrame"
    mainFrame.Size = UDim2.new(0, 350, 0, 400)
    mainFrame.Position = UDim2.new(0.5, -175, 0.5, -200)
    mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
    mainFrame.BorderSizePixel = 0
    mainFrame.Parent = screenGui
    
    -- Efecto de borde
    local uiStroke = Instance.new("UIStroke")
    uiStroke.Color = Color3.fromRGB(0, 255, 255)
    uiStroke.Thickness = 2
    uiStroke.Parent = mainFrame
    
    -- Header
    local header = Instance.new("Frame")
    header.Name = "Header"
    header.Size = UDim2.new(1, 0, 0, 40)
    header.Position = UDim2.new(0, 0, 0, 0)
    header.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
    header.BorderSizePixel = 0
    header.Parent = mainFrame
    
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(0, 200, 1, 0)
    title.Position = UDim2.new(0, 10, 0, 0)
    title.Text = "‚ö° REZO HUB v1.0"
    title.TextColor3 = Color3.fromRGB(0, 255, 255)
    title.BackgroundTransparency = 1
    title.TextSize = 18
    title.Font = Enum.Font.GothamBold
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = header
    
    -- Bot√≥n de toggle
    local toggleBtn = Instance.new("TextButton")
    toggleBtn.Size = UDim2.new(0, 30, 0, 30)
    toggleBtn.Position = UDim2.new(1, -35, 0, 5)
    toggleBtn.Text = "‚àí"
    toggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggleBtn.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
    toggleBtn.BorderSizePixel = 0
    toggleBtn.Parent = header
    
    -- Contenido
    local contentFrame = Instance.new("Frame")
    contentFrame.Name = "Content"
    contentFrame.Size = UDim2.new(1, -20, 1, -60)
    contentFrame.Position = UDim2.new(0, 10, 0, 45)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Parent = mainFrame
    
    -- Crear botones de funciones
    self:CreateButtons(contentFrame)
    
    -- Sistema de arrastre
    self:MakeDraggable(header, mainFrame)
    
    -- Evento de toggle
    toggleBtn.MouseButton1Click:Connect(function()
        contentFrame.Visible = not contentFrame.Visible
        toggleBtn.Text = contentFrame.Visible and "‚àí" or "+"
        
        if contentFrame.Visible then
            mainFrame.Size = UDim2.new(0, 350, 0, 400)
        else
            mainFrame.Size = UDim2.new(0, 350, 0, 40)
        end
    end)
end

function RezoHub:CreateButtons(parent)
    local buttons = {
        {"üçé Auto Frutas", "Activa farmeo autom√°tico de frutas", Color3.fromRGB(255, 100, 100)},
        {"üì¶ Auto Cofres", "Recolecta cofres autom√°ticamente", Color3.fromRGB(100, 150, 255)},
        {"‚ö° Auto Entrenar", "Entrena habilidades autom√°ticamente", Color3.fromRGB(100, 255, 100)},
        {"üîß Configuraci√≥n", "Ajustes del REZO HUB", Color3.fromRGB(255, 200, 100)}
    }
    
    for i, btnData in ipairs(buttons) do
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(1, 0, 0, 50)
        button.Position = UDim2.new(0, 0, 0, (i-1) * 60)
        button.Text = btnData[1]
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.BackgroundColor3 = btnData[3]
        button.BorderSizePixel = 0
        button.TextSize = 16
        button.Font = Enum.Font.GothamBold
        button.Parent = parent
        
        -- Descripci√≥n
        local desc = Instance.new("TextLabel")
        desc.Size = UDim2.new(1, 0, 0, 20)
        desc.Position = UDim2.new(0, 0, 0, 35)
        desc.Text = btnData[2]
        desc.TextColor3 = Color3.fromRGB(200, 200, 200)
        desc.BackgroundTransparency = 1
        desc.TextSize = 12
        desc.Font = Enum.Font.Gotham
        desc.Parent = button
        
        -- Eventos de los botones
        if i == 1 then
            button.MouseButton1Click:Connect(function()
                self.Config.AutoFarmFruits = not self.Config.AutoFarmFruits
                button.Text = self.Config.AutoFarmFruits and "üçé Auto Frutas ‚úÖ" or "üçé Auto Frutas"
                print("üå± Auto Frutas: " .. (self.Config.AutoFarmFruits and "ACTIVADO" or "DESACTIVADO"))
            end)
        elseif i == 2 then
            button.MouseButton1Click:Connect(function()
                self.Config.AutoCollectChests = not self.Config.AutoCollectChests
                button.Text = self.Config.AutoCollectChests and "üì¶ Auto Cofres ‚úÖ" or "üì¶ Auto Cofres"
                print("üó∫Ô∏è Auto Cofres: " .. (self.Config.AutoCollectChests and "ACTIVADO" or "DESACTIVADO"))
            end)
        elseif i == 3 then
            button.MouseButton1Click:Connect(function()
                self.Config.AutoTrainSkills = not self.Config.AutoTrainSkills
                button.Text = self.Config.AutoTrainSkills and "‚ö° Auto Entrenar ‚úÖ" or "‚ö° Auto Entrenar"
                print("üéØ Auto Entrenar: " .. (self.Config.AutoTrainSkills and "ACTIVADO" or "DESACTIVADO"))
            end)
        elseif i == 4 then
            button.MouseButton1Click:Connect(function()
                self:ShowConfigMenu()
            end)
        end
    end
end

-- SISTEMA DE ARRASTRE
function RezoHub:MakeDraggable(dragHandle, mainFrame)
    local dragging = false
    local dragInput, dragStart, startPos
    
    dragHandle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = mainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    dragHandle.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            mainFrame.Position = UDim2.new(
                startPos.X.Scale, 
                startPos.X.Offset + delta.X,
                startPos.Y.Scale, 
                startPos.Y.Offset + delta.Y
            )
        end
    end)
end

-- SISTEMAS DE FARMEO
function RezoHub:StartSystems()
    -- Sistema de actualizaci√≥n continua
    RunService.Heartbeat:Connect(function()
        self:UpdateSystems()
    end)
end

function RezoHub:UpdateSystems()
    if self.Config.AutoFarmFruits then
        self:AutoFarmFruits()
    end
    
    if self.Config.AutoCollectChests then
        self:AutoCollectChests()
    end
    
    if self.Config.AutoTrainSkills then
        self:AutoTrainSkills()
    end
end

function RezoHub:AutoFarmFruits()
    local character = player.Character
    if not character then return end
    
    local humanoid = character:FindFirstChild("Humanoid")
    local rootPart = character:FindFirstChild("HumanoidRootPart")
    if not humanoid or not rootPart then return end
    
    -- Buscar frutas comunes
    local fruitNames = {"Ice", "Dark", "Light", "Magma", "Quake", "Bomb", "Spike", "Flame"}
    
    for _, fruitName in ipairs(fruitNames) do
        local fruit = workspace:FindFirstChild(fruitName)
        if fruit and fruit:IsA("Part") then
            local distance = (fruit.Position - rootPart.Position).Magnitude
            if distance < self.Config.FruitRange then
                humanoid:MoveTo(fruit.Position)
                
                if distance < 10 and fruit:FindFirstChild("ClickDetector") then
                    fireclickdetector(fruit.ClickDetector)
                    if self.Config.DebugMode then
                        print("üçä Fruta recolectada: " .. fruitName)
                    end
                end
                break
            end
        end
    end
end

function RezoHub:AutoCollectChests()
    local character = player.Character
    if not character then return end
    
    local humanoid = character:FindFirstChild("Humanoid")
    local rootPart = character:FindFirstChild("HumanoidRootPart")
    if not humanoid or not rootPart then return end
    
    -- Buscar cofres
    local chestLocations = {"Chests", "Chest", "TreasureChest"}
    
    for _, locationName in ipairs(chestLocations) do
        local location = workspace:FindFirstChild(locationName)
        if location then
            for _, chest in ipairs(location:GetChildren()) do
                if chest:IsA("Model") or chest:IsA("Part") then
                    local chestPos = chest:IsA("Model") and chest:GetPivot().Position or chest.Position
                    local distance = (chestPos - rootPart.Position).Magnitude
                    
                    if distance < self.Config.ChestRange then
                        humanoid:MoveTo(chestPos)
                        
                        if distance < 8 and chest:FindFirstChild("ClickDetector") then
                            fireclickdetector(chest.ClickDetector)
                            if self.Config.DebugMode then
                                print("üì¶ Cofre abierto")
                            end
                        end
                        break
                    end
                end
            end
        end
    end
end

function RezoHub:AutoTrainSkills()
    local character = player.Character
    if not character then return end
    
    local humanoid = character:FindFirstChild("Humanoid")
    local rootPart = character:FindFirstChild("HumanoidRootPart")
    if not humanoid or not rootPart then return end
    
    -- Buscar enemigos
    local enemyContainers = {"Enemies", "NPCs", "Monsters"}
    
    for _, containerName in ipairs(enemyContainers) do
        local container = workspace:FindFirstChild(containerName)
        if container then
            for _, enemy in ipairs(container:GetChildren()) do
                if enemy:FindFirstChild("Humanoid") and enemy:FindFirstChild("HumanoidRootPart") then
                    local distance = (enemy.HumanoidRootPart.Position - rootPart.Position).Magnitude
                    
                    if distance < self.Config.EnemyRange then
                        humanoid:MoveTo(enemy.HumanoidRootPart.Position)
                        
                        if self.Config.DebugMode then
                            print("‚ö° Atacando enemigo: " .. enemy.Name)
                        end
                        break
                    end
                end
            end
        end
    end
end

function RezoHub:ShowConfigMenu()
    print("‚öôÔ∏è CONFIGURACI√ìN REZO HUB")
    print("üå± Auto Frutas: " .. tostring(self.Config.AutoFarmFruits))
    print("üì¶ Auto Cofres: " .. tostring(self.Config.AutoCollectChests))
    print("‚ö° Auto Entrenar: " .. tostring(self.Config.AutoTrainSkills))
    print("üêõ Debug Mode: " .. tostring(self.Config.DebugMode))
end

